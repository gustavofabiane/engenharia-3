{% extends 'base/admin.twig' %}

{% block content %}
    <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Desabilitar {{ category.nome }}</h4>
            </div>
            <div class="panel-body">
                <p>Tem certeza que você deseja desabilitar a categoria {{ category.nome }}?</p>
            </div>
            <div class="panel-footer">
                <form name="disableCategory" method="POST" action="{{ path_for('disable-category', {id: category.id}) }}">
                    <input type="hidden" name="_METHOD" value="DELETE">
                    <a class="btn btn-info" href="{{ path_for('list-categories') }}">Não</a>
                    <button class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}