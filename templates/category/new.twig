{% extends "base/admin.twig" %}

{% block content %}

    <h2 class="page-header">Novas Categorias</h2>

    <form name="categoryBash" method="POST" action="{{ path_for('new-categories') }}">
        <input type="hidden" readonly name="validacao" value="categoryBatch">
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <h4 class="text-center">Categorias</h4>
                <div id="forms-categorias">
                    <div class="form-categoria form-group">
                        <div class="form-group col-sm-6">
                            <input placeholder="Nome da Categoria" class="form-control" type="text" name="categorias[0][nome]" value="{{categories[0].nome}}">
                        </div>
                        <div class="form-group col-sm-6">
                            <input placeholder="Margem de Lucro" class="form-control" type="number" name="categorias[0][margemLucro]" value="{{categories[0].margemLucro}}">
                            <input type="hidden" name="categorias[0][sequencia]" value="0">
                        </div>
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <button class="btn btn-block btn-sm btn-info">+ Categoria</button>
                </div>
                <div class="form-group col-xs-12 text-right">
                    <a class="btn btn-default" href="{{ path_for('list-categories') }}">Cancelar</a>
                    <button class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </form>

{% endblock %}